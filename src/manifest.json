{
  "manifest_version": 2,
  "name": "GMass Clone",
  "description": "A clone of GMass",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icons/icon.png"
  },
  "permissions": [
  ],
   "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/mail/u/0/*"
      ],
      "js": ["js/content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["js/background.js"]
  },
  "icons": { 
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}